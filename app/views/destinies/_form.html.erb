<%= javascript_include_tag 'destiny' %>
<div class="container px-5 my-5">
  <%= form_with(model: destiny, id: "destinyForm") do |form| %>
    <% if destiny.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(destiny.errors.count, "error") %> prohibited this destiny from being saved:</h2>

        <ul>
          <% destiny.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h1>Nuevo destino</h1>
    <div class="form-floating mb-3">
      <%= form.collection_select :travel_id, Travel.where(user_id: current_user.id), :id, :name, { include_blank: 'Agregar al viaje' }, { class: 'form-select w-50' } %>
    </div>
    <div class="form-floating mb-3">
      <%= form.collection_select :country_id, @countries, :id, :name, { include_blank: 'PaÃ­s' }, { class: 'form-select w-50' } %>
    </div>
    <div class="form-floating mb-3">
      <%= form.date_field :start_date, class: "form-control w-50", id: "fecha_salida", placeholder: "Fecha de salida"  %>
      <%= form.label :fecha_salida, "Fecha de salida", style: "display: block" %>
    </div>
    <div class="form-floating mb-3">
      <%= form.date_field :fishis_date, class: "form-control w-50", id: "fecha_regreso", placeholder: "Fecha de regreso"  %>
      <%= form.label :fecha_regreso, "Fecha de regreso", style: "display: block" %>
    </div>
    <div class="d-grid">
      <%= form.submit "Registrar", class: "btn btn-primary btn-sm w-25 py-2 rounded-pill mb-2" %>
      <%= link_to "Volver", destinies_path, class: "btn btn-info btn-sm w-25 py-2 rounded-pill mb-2" %>
    </div>
  <% end %>
</div>


