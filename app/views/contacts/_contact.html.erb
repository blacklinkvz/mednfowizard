<tr class="table-light">
  <td><%= contact.name %></td>
  <td><%= contact.lastname %></td>
  <td><%= contact.country.name %></td>
  <td><%= contact.email %></td>      
  <td><%= contact.phone %></td>
  
  <td>
    <div class="btn-group">
      <%= link_to raw("<i class=\"bi bi-pencil-square\"></i>"),  edit_contact_path(contact), :class => "btn btn-sm btn-primary rounded-pill mr-1" %>
      <%= button_to raw("<i class=\"bi bi-trash\"></i>"), contact, method: :delete, :class => "btn btn-sm btn-danger rounded-pill" %>
    </div>
  </td>
</tr>
</tbody>
</div>
</main>
