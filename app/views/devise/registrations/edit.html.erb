<div class="container px-5 my-5">
<h2>Editar usuario</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <form id="contactForm" data-sb-form-api-token="API_TOKEN">
    <div class="form-floating mb-3">
      <%= f.email_field :email, autofocus: true, :class => "form-control w-50", id: "email", placeholder: "email", :disabled => true %>
      <%= f.label :email, "Email" %>
    </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-floating mb-3">
    <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control w-50", id: "current_password", placeholder: "Contraseña actual" %>
    <%= f.label :current_password, "Contraseña actual" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control w-50", id: "contraseña", placeholder: " Nueva Contraseña" %>
    <%= f.label :contraseña, "Nueva contraseña (mínimo 6 caracteres)" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control w-50", id: "Confirmar_contraseña", placeholder: "Confirmar nueva contraseña" %>
    <%= f.label :Confirmar_contraseña, "Confirmar nueva contraseña" %>
  </div>
  <div class="actions">
    <%= f.submit "Actualizar", :class => "btn btn-primary w-25 py-2 rounded-pill mb-2" %>
  </div>
<% end %>
<%= link_to "regresar", :back, :class => "btn btn-info w-25 py-2 rounded-pill mb-5" %>
<div><%= button_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estas segur@?", turbo_confirm: "¿Estas segur@?" }, method: :delete, :class => "btn btn-danger w-25 py-2 rounded-pill mb-2" %></div>
</div>