<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4 mx-auto">
      <div class="centered-div">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <h1 class="h3 mb-3 fw-normal">Iniciar sesión</h1>

          <div class="form-floating mb-3">
            <%= f.email_field :email, class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
            <%= f.label :floatingInput, "Email" %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, autocomplete: "current-password", :class => "form-control", placeholder: "Contraseña", id: "floatingPassword" %>
            <%= f.label :floatingPassword, "Contraseña" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check text-start my-3">
              <%= f.check_box :remember_me, :class => "form-check-input" %>
              <%= f.label :recordar, :class =>"form-check-label" %>
            </div>
          <% end %>

          <div class="actions text-center">
            <%= f.submit "Ingresar", :class => "btn btn-primary w-100 py-2 rounded-pill" %>
          </div>
        <% end %>
      </div>
       <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
